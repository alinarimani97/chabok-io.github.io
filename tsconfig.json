{
	"compilerOptions": {
		"rootDir": ".",
		"baseUrl": ".",
		"outDir": "temp",
		"sourceMap": false,
		"noEmit": true,
		"declaration": true,
        "declarationMap": true,

		"target": "esnext",
		"module": "esnext",
		"moduleResolution": "node",
		"allowJs": false,

		"noUnusedLocals": true,
		"strictNullChecks": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"noImplicitReturns": true,
		"strict": true,
		"skipLibCheck": true,
		"noUnusedParameters": true,
	
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"removeComments": false,

		"jsx": "preserve",
		"lib": ["esnext", "dom"],
		"types": ["node", "vite/client"],

		"paths": {
			"@/*": ["./src/*"],
		},
	},
	"include": [
		"./src/**/*.ts",
		"src/**/*.d.ts",
		"src/**/*.vue"
	],
}
